---
import ThemeToggle from './ThemeToggle.astro';

const navItems = [
  { href: '/', label: 'Home' },
  { href: '/blog/', label: 'Blog' },
  { href: '/blog/page/1/', label: 'Archive' },
];

const activePath = Astro.url.pathname;
---

<header class="sticky top-0 z-40 border-b backdrop-blur" style="border-color: rgb(var(--line)); background: color-mix(in srgb, rgb(var(--bg-canvas)) 90%, transparent);">
  <div class="content-container flex h-16 items-center justify-between gap-4">
    <a href="/" class="text-xl font-bold tracking-wide" style="font-family: var(--font-display);">Signal & Sprocket</a>

    <div class="flex items-center gap-6">
      <nav>
        <ul class="flex items-center gap-4">
          {navItems.map((item) => (
            <li>
              <a class="nav-link" href={item.href} aria-current={activePath === item.href ? 'page' : undefined}>{item.label}</a>
            </li>
          ))}
        </ul>
      </nav>
      <ThemeToggle />
    </div>
  </div>
</header>
