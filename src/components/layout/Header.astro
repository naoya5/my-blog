---
import ThemeToggle from './ThemeToggle.astro';

const navItems = [
  { href: '/', label: 'Home' },
  { href: '/blog/', label: 'Blog' },
  { href: '/blog/page/1/', label: 'Archive' },
];

const activePath = Astro.url.pathname;
---

<header class="glass-header">
  <div class="content-container flex h-20 items-center justify-between gap-4">
    <a href="/" class="group flex items-center gap-2 text-2xl font-black tracking-tighter" style="font-family: var(--font-display);">
      <span class="bg-gradient-to-br from-brand-600 to-brand-400 bg-clip-text text-transparent transition-all group-hover:from-brand-500 group-hover:to-brand-300">
        Signal & Sprocket
      </span>
    </a>

    <div class="flex items-center gap-8">
      <nav class="hidden md:block">
        <ul class="flex items-center gap-6">
          {navItems.map((item) => (
            <li>
              <a class="nav-link" href={item.href} aria-current={activePath === item.href ? 'page' : undefined}>{item.label}</a>
            </li>
          ))}
        </ul>
      </nav>
      <div class="h-6 w-px bg-slate-200 dark:bg-slate-800 hidden md:block"></div>
      <ThemeToggle />
    </div>
  </div>
</header>
